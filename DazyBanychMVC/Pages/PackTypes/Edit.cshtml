@page
@model DazyBanychMVC.Pages.PackTypes.EditModel

@{
    ViewData["Title"] = "Edit";
    
}

<h1>Edit</h1>

<h4>PackType: @Model.PackType.Name </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PackType.Name" />
            <div class="form-group">
                <label asp-for="PackType.MinWeight" class="control-label"></label>
                <input asp-for="PackType.MinWeight" class="form-control" />
                <span asp-validation-for="PackType.MinWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackType.MaxWeight" class="control-label"></label>
                <input asp-for="PackType.MaxWeight" class="form-control" />
                <span asp-validation-for="PackType.MaxWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackType.Price" class="control-label"></label>
                <input asp-for="PackType.Price" class="form-control" />
                <span asp-validation-for="PackType.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
