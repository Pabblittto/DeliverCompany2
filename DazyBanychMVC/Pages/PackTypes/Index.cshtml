@page
@model DazyBanychMVC.Pages.PackTypes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Packages Types</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackType[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackType[0].MinWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackType[0].MaxWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackType[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PackType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Name">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Name">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
