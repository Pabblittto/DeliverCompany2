            </div>
            <div class="form-group">
                <label asp-for="Order.ReciverId" class="control-label"></label>
                <select asp-for="Order.ReciverId" class="form-control" asp-items="ViewBag.ReciverId"></select>
                <span asp-validation-for="Order.ReciverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.State" class="control-label"></label>
                <select asp-for="Order.State" class="form-control" asp-items="ViewBag.PackageStates"></select>
                <span asp-validation-for="Order.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.PackId" class="control-label"></label>
                <select asp-for="Order.PackId" class="form-control" asp-items="ViewBag.PackId"></select>
                <span asp-validation-for="Order.PackId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
