            <div class="form-group">
                <label asp-for="Order.DepartmentId" class="control-label"></label>
                <select asp-for="Order.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="Order.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.SenderId" class="control-label"></label>
                <select asp-for="Order.SenderId" class="form-control" asp-items="ViewBag.SenderId"></select>
