@page
@model DazyBanychMVC.Pages.Positions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Position</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Position.Name" class="control-label"></label>
                <input asp-for="Position.Name" class="form-control" />
                <span asp-validation-for="Position.Name" class="text-danger"></span>
                <span class="text-info">This name can NOT be changed later</span>
            </div>
            <div class="form-group">
                <label asp-for="Position.MinSalary" class="control-label"></label>
                <input asp-for="Position.MinSalary" class="form-control" />
                <span asp-validation-for="Position.MinSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.MaxSalary" class="control-label"></label>
                <input asp-for="Position.MaxSalary" class="form-control" />
                <span asp-validation-for="Position.MaxSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
